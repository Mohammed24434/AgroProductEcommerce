@model AgroProductEcommerce.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Order #@Model.Id</h4>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("f")</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>
        <div class="col-md-6">
            <h4>Shipping Information</h4>
            <p>@Model.CustomerName</p>
            <p>@Model.ShippingAddress</p>
            <p>@Model.ShippingCity, @Model.ShippingState @Model.ShippingPostalCode</p>
            <p>@Model.ShippingCountry</p>
            <p>@Model.PhoneNumber</p>
            <p>@Model.Email</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Order Items</h4>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>$@item.UnitPrice.ToString("0.00")</td>
                            <td>@item.Quantity</td>
                            <td>$@((item.UnitPrice * item.Quantity).ToString("0.00"))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right"><strong>Total:</strong></td>
                        <td><strong>$@Model.TotalAmount.ToString("0.00")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <a asp-action="Orders" class="btn btn-secondary">Back to Orders</a>
</div>