@model IEnumerable<AgroProductEcommerce.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToString("d")</td>
                            <td>@order.OrderItems.Sum(oi => oi.Quantity)</td>
                            <td>$@order.TotalAmount.ToString("0.00")</td>
                            <td>@order.Status</td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You haven't placed any orders yet.
        </div>
    }
</div>